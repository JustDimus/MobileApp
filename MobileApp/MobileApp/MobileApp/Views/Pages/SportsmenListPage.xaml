<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.Pages.SportsmenListPage"
             xmlns:local="clr-namespace:MobileApp.Views.Pages"
             xmlns:viewModels="clr-namespace:MobileApp.ViewModels.Pages"
             BindingContext="{Binding SportsmenListPageViewModel, Source={StaticResource Locator}}"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid Padding="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <StackLayout Orientation="Vertical"
                     Spacing="15"
                     HorizontalOptions="CenterAndExpand"
                     VerticalOptions="Center"
                     Grid.Row="0">
                <Label Text="{Binding HeaderText}"
                   HorizontalTextAlignment="Start"/>
                <Button Command="{Binding AddSportsmenCommand}"
                    Text="{Binding AddSportsmenButtonText}"/>
                <ListView ItemsSource="{Binding SportsmenDataList}"
                      SelectionMode="Single"
                      SelectedItem="{Binding OnSportsmenSelected, Mode=OneWayToSource}"
                      IsEnabled="{Binding DataReloadStatus}"
                      IsVisible="{Binding DataReloadStatus}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <Frame BorderColor="Gray" BackgroundColor="White" CornerRadius="6" Padding="15,0,0,15" VerticalOptions="CenterAndExpand">
                                        <StackLayout Orientation="Vertical"
                                                     Spacing="5">
                                            <StackLayout Orientation="Horizontal">
                                                <Label Text="{Binding Source={RelativeSource AncestorType={x:Type viewModels:SportsmenListViewModel}}, Path=NameText}"/>
                                                <Label Text="{Binding Fio}"/>
                                            </StackLayout>
                                            <StackLayout Orientation="Horizontal">
                                                <Label Text="{Binding Source={RelativeSource AncestorType={x:Type viewModels:SportsmenListViewModel}}, Path=PhoneText}"/>
                                                <Label Text="{Binding Phone}"/>
                                            </StackLayout>
                                            <StackLayout Orientation="Horizontal">
                                                <Label Text="{Binding Source={RelativeSource AncestorType={x:Type viewModels:SportsmenListViewModel}}, Path=EmailText}"/>
                                                <Label Text="{Binding Email}"/>
                                            </StackLayout>
                                            <StackLayout Orientation="Horizontal">
                                                <Label Text="{Binding Source={RelativeSource AncestorType={x:Type viewModels:SportsmenListViewModel}}, Path=BirthdayText}"/>
                                                <Label Text="{Binding BirthdayDate}"/>
                                            </StackLayout>
                                            <StackLayout Orientation="Horizontal">
                                                <Label Text="{Binding Source={RelativeSource AncestorType={x:Type viewModels:SportsmenListViewModel}}, Path=SexText}"/>
                                                <Label Text="{Binding Sex}"/>
                                            </StackLayout>
                                        </StackLayout>
                                    </Frame>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Label Text="{Binding RefreshDataError}"
                   IsVisible="{Binding DataReloadStatus, Converter={StaticResource BoolInverter}}"/>
            </StackLayout>
            <StackLayout Grid.Row="1"
                         HorizontalOptions="FillAndExpand"
                         Orientation="Horizontal">
                <ImageButton Source="list_icon.png" HorizontalOptions="StartAndExpand"/>
                <ImageButton Source="profile_icon.png" Command="{Binding GoToProfileCommand}" HorizontalOptions="EndAndExpand"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</local:BasePage>